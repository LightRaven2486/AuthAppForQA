<Window x:Class="AuthApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <!--Auth Panel-->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <!--Logo-->
            <TextBlock Padding="10" Foreground="White" FontWeight="Black" FontSize="24" TextAlignment="Center" TextWrapping="Wrap" Text="Test app for QA Testing (Manual, Automation)"></TextBlock>
            <!--Login-->
            <StackPanel Margin="0 10 0 0">
                <TextBlock Foreground="White" FontSize="14" FontWeight="Medium" Text="Login:"></TextBlock>
                <TextBox></TextBox>
            </StackPanel>
            <!--Password-->
            <StackPanel Margin="0 10 0 0">
                <TextBlock Foreground="White" FontSize="14" FontWeight="Medium" Text="Password:"></TextBlock>
                <TextBox></TextBox>
                <TextBlock Grid.Row="2" Grid.Column="2" Margin="0 5 0 0" Text="Forgot Password?" Foreground="Aquamarine" FontWeight="Bold" TextDecorations="Underline">
                    <TextBlock.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding ClickCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
            <!--Login-->
            <StackPanel Margin="0 10 0 0">
                <Button Content="Login" Background="SlateGray" Foreground="White" FontWeight="Bold"></Button>
            </StackPanel>
        </StackPanel>
        <!--Error Message-->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Message: Wrong Password" FontWeight="Light" Foreground="IndianRed" HorizontalAlignment="Center" Visibility="Hidden"/>
    </Grid>
</Window>
